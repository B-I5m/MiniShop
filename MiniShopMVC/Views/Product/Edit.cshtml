@model MiniShopMVC.Models.ProductUpdateViewModel

    @{
    ViewData["Title"] = "Редактировать продукт";
}

<h2>Редактировать продукт</h2>

    <form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
    <label asp-for="Name" class="form-label">Название продукта</label>
    <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
    <label asp-for="Description" class="form-label">Описание</label>
    <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
    <label asp-for="Price" class="form-label">Цена</label>
    <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
    <label asp-for="CategoryId" class="form-label">Категория</label>
    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>